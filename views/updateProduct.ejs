<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CreateProduct</title>
</head>

<body>
    <div class="add-product-container">
        <h1>Update Product</h1>
        <form action="/admin/product/update/<%= product._id %>" method="POST" enctype="multipart/form-data">
            <input type="text" name="name" value="<%= product.name %>"  />
            <select name="category" required>
                
                <% categories.forEach(category => { %>
                    <option value="<%= category._id %>">
                        <%= category.name %>
                    </option>
                <% }) %>
            </select>
            <input type="text" name="description" value="<%= product.description %>" />
            <input type="number" name="price" value="<%= product.price %>" />
            <input type="file" name="image" />
            <button type="submit">Update</button>
        </form>
    </div>
</body>
<style>
    /* General styling */
    body {
             font-family: 'Arial', sans-serif;
             background: linear-gradient(135deg, #74b9ff, #a29bfe);
             display: flex;
             justify-content: center;
             align-items: center;
             height: 100vh;
             margin: 0;
         }
 
         .add-product-container {
             background: #fff;
             padding: 30px;
             border-radius: 10px;
             box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
             width: 400px;
             max-width: 90%;
             text-align: center;
         }
 
         .add-product-container h1 {
             margin-bottom: 20px;
             font-size: 28px;
             color: #2c3e50;
         }
 
         .add-product-container form input,
         .add-product-container form button {
             width: 300px;
             padding: 12px 15px;
             margin: 10px 0;
             border: none;
             border-radius: 5px;
             font-size: 16px;
         }
 
         .add-product-container form input {
             background: #f5f5f5;
             border: 1px solid #dcdde1;
         }
 
         .add-product-container form input:focus {
             outline: none;
             border-color: #74b9ff;
             box-shadow: 0 0 5px rgba(116, 185, 255, 0.7);
         }
 
         .add-product-container form button {
             background: #0984e3;
             color: #fff;
             cursor: pointer;
             transition: background 0.3s ease, transform 0.2s;
         }
 
         .add-product-container form button:hover {
             background: #74b9ff;
             transform: translateY(-2px);
         }
 
         .add-product-container form button:active {
             background: #40739e;
         }
 
         /* Responsive design */
         @media (max-width: 768px) {
             .add-product-container {
                 width: 90%;
                 padding: 20px;
             }
 
             .add-product-container h1 {
                 font-size: 24px;
             }
         }
         .error{
             color: red;
             font-size: small;
         }
 </style>
</html>