<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order List</title>
 
</head>

<body>
  <!-- Top Navigation Bar -->
  <div class="navbar">
    <div>
      <a href="/admin/create/product">Create Product</a>
      <a href="/admin/product/list">Product List</a>
      <a href="/admin/create/category">Create Category</a>
      <a href="/admin/category/list">Category List</a>
      <a href="/admin/create/subcategory">Create Subcategory</a>
      <a href="/admin/subcategory/list">Subcategory List</a>
      <a href="/admin/user/list">User List</a>
      <a href="/admin/orders/list">Orders List</a>
    </div>
    <a href="/admin/logout" class="logout-link">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <h1>Order List</h1>
      <!-- Filter Dropdown -->
      <form action="/admin/orders/list" method="get" class="filter">
        <label for="status">Filter by Status:</label>
        <select id="status" name="status" onchange="this.form.submit()">
            <option value="All" <%= currentStatus === 'All' ? 'selected' : '' %>>All</option>
            <option value="Pending" <%= currentStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
            <option value="Shipped" <%= currentStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
            <option value="Delivered" <%= currentStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
            <option value="Cancelled" <%= currentStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
        </select>
    </form>

    <!-- Orders Table -->
    <table>
        <thead>
            <tr>
                <th>User Email</th>
                <th>Order ID</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Payment Method</th>
            </tr>
        </thead>
        <tbody>
            <% if (orders.length === 0) { %>
                <tr>
                    <td colspan="5">No orders found for the selected status.</td>
                </tr>
            <% } else { %>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.userId.email  %></td>
                        <td><%= order._id %></td>
                        <td>$<%= order.totalAmount %></td>
                        <td>
                            <form action="/admin/orders/update/status/<%= order._id %>" method="post">
                                <div>
                                    <select name="status">
                                        <option selected><%= order.status %></option>
                                        <option value="Pending">Pending</option>
                                        <option value="Shipped">Shipped</option>
                                        <option value="Delivered">Delivered</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                    <button type="submit">Update</button>
                                </div>
                            </form>
                        </td>
                        <td><%= order.paymentMethod %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
  </div>
</body>
<style>
  /* General Styling */
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    min-height: 100vh;
  }

  /* Top Navigation Bar */
  .navbar {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .navbar a {
    color: white;
    text-decoration: none;
    margin: 0 10px;
    font-size: 16px;
    padding: 8px 12px;
    border-radius: 5px;
    transition: background-color 0.3s;
  }

  .navbar a:hover {
    background-color: #0056b3;
  }

  .navbar .logout-link {
    background-color: #e74c3c;
  }

  .navbar .logout-link:hover {
    background-color: #c0392b;
  }

  /* Main Content */
  .main-content {
    padding: 20px;
  }

  /* Page Title */
  .main-content h1 {
    text-align: center;
    color: #333;
    margin-bottom: 20px;
  }

  /* Order List Table */
  table {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    border-collapse: collapse;
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  th, td {
    padding: 15px;
    text-align: left;
    border: 1px solid #ddd;
  }

  th {
    background-color: #070707;
    color: white;
  }

  tr:hover {
    background-color: #f1f1f1;
  }

  select {
    padding: 5px;
    border-radius: 5px;
    border: 1px solid #ddd;
  }

  /* Responsive Design */
  @media (max-width: 600px) {
    table {
      width: 100%;
    }

    th, td {
      font-size: 14px;
    }
  }
    /* Add styling for the dropdown and table here */
    .filter {
          margin-bottom: 1rem;
      }

      .filter select {
          padding: 0.5rem;
          font-size: 1rem;
          border-radius: 5px;
          border: 1px solid #ccc;
      }

      table {
          width: 100%;
          border-collapse: collapse;
          margin: 2rem 0;
          background-color: #fff;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          
          
      }

      th, td {
          padding: 1rem;
          text-align: center;
          border: 1px solid #ddd;
      }

      th {
          background-color: #239c08;
          color: white;
          font-weight: bold;
      }

      td select, td button {
          margin: 0.5rem 0;
      }
</style>
</html>
