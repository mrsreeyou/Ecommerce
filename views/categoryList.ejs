<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Category List</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar Styling */
    .sidebar {
      background-color: #007bff;
      color: white;
      width: 20%;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .sidebar h1 {
      font-size: 24px;
      margin-bottom: 20px;
      text-align: left;
    }

    .sidebar a {
      text-decoration: none;
      color: white;
      font-size: 18px;
      margin: 10px 0;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .sidebar a:hover {
      background-color: #0056b3;
    }

    .logout-link {
      margin-top: auto;
      background-color: #e74c3c;
      color: white;
      padding: 10px 15px;
      border-radius: 5px;
      text-align: center;
    }

    .logout-link:hover {
      background-color: #c0392b;
    }

    /* Main Content */
    .main-content {
      flex-grow: 1;
      padding: 20px;
    }

    /* Page Title */
    .main-content h1 {
      text-align: center;
      margin-top: 0;
      color: #333;
    }

    /* Category Container */
    .category-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      padding: 20px;
    }

    /* Category Card Styling */
    .category-card {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #fff;
      width: 80%;
      max-width: 800px;
      padding: 15px 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .category-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .category-details h2 {
      font-size: 18px;
      margin: 0;
      color: #333;
    }

    .category-details p {
      font-size: 14px;
      margin: 5px 0 0;
      color: #666;
    }

    .update {
      background-color: #0f56d0;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    .update:hover {
      background-color: #0942a4;
    }

    .delete {
      background-color: #e94629;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    .delete:hover {
      background-color: #e13011;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/admin/dashboard">
      <h1>Admin Dashboard</h1>
    </a>
    <a href="/admin/create/product">Create Product</a>
    <a href="/admin/product/list">Product List</a>
    <a href="/admin/create/category">Create Category</a>
    <a href="/admin/category/list">Category List</a>
    <a href="/admin/create/subcategory">create subcategory</a>
    <a href="/admin/subcategory/list">Subcategory List</a>
    <a href="/admin/user/list">User list</a>
    <a href="/admin/logout" class="logout-link">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Page Title -->
    <h1>Category List</h1>

    <!-- Category List -->
    <div class="category-container">
      <% categories.forEach(category=> { %>
        <div class="category-card">
          <!-- Category Details -->
          <div class="category-details">
            <h2>
              <%= category.name %>
            </h2>
            <h4>
              <%= category._id %>
            </h4>
            <p>
              <%= category.description %>
            </p>
          </div>

          <!-- Update Button -->
          <a href="/admin/category/update/<%= category._id %>">
            <button class="update">Update</button>
          </a>
          <!-- Delete button -->
          <form action="/admin/category/delete/<%= category._id %>" method="POST" style="display: inline;">
            <button class="delete" type="submit" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
          </form>
          
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>