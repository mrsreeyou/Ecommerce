<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Category List</title>
  
</head>

<body>
  <!-- Navbar -->
  <div class="navbar">
    <div>
      <a href="/admin/dashboard"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);"><path d="M12 2C6.579 2 2 6.579 2 12s4.579 10 10 10 10-4.579 10-10S17.421 2 12 2zm0 5c1.727 0 3 1.272 3 3s-1.273 3-3 3c-1.726 0-3-1.272-3-3s1.274-3 3-3zm-5.106 9.772c.897-1.32 2.393-2.2 4.106-2.2h2c1.714 0 3.209.88 4.106 2.2C15.828 18.14 14.015 19 12 19s-3.828-.86-5.106-2.228z"></path></svg></a>

      <!-- <a href="/admin/create/product">Create Product</a>
      <a href="/admin/product/list">Product List</a>
      <a href="/admin/create/category">Create Category</a>
      <a href="/admin/category/list">Category List</a>
      <a href="/admin/create/subcategory">Create Subcategory</a>
      <a href="/admin/subcategory/list">Subcategory List</a>
      <a href="/admin/user/list">User List</a>
      <a href="/admin/orders/list">Orders List</a> -->
      <a href="/admin/logout" class="logout-link">Logout</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Page Title -->
    <h1>Category List</h1>

    <!-- Category List -->
    <div class="category-container">
      <% categories.forEach(category => { %>
        <div class="category-card">
          <!-- Category Details -->
          <div class="category-details">
            <h2><%= category.name %></h2>
            <h4 class="categoryId"><%= category._id %></h4>
            <p><%= category.description %></p>
          </div>

          <!-- Update Button -->
          <a href="/admin/category/update/<%= category._id %>">
            <button class="update">Update</button>
          </a>
          <!-- Delete Button -->
          <form action="/admin/category/delete/<%= category._id %>" method="POST" style="display: inline;">
            <button class="delete" type="submit" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
<style>
  /* General Styling */
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

   /* Top Navigation Bar */
   .navbar {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .navbar a {
    color: white;
    text-decoration: none;
    margin: 0 10px;
    font-size: 16px;
    padding: 8px 12px;
    border-radius: 5px;
    transition: background-color 0.3s;
  }

  .navbar a:hover {
    background-color: #0056b3;
  }

  .navbar .logout-link {
    background-color: #e74c3c;
  }

  .navbar .logout-link:hover {
    background-color: #c0392b;
  }

  /* Main Content */
  .main-content {
    flex-grow: 1;
    padding: 20px;
  }

  /* Page Title */
  .main-content h1 {
    text-align: center;
    margin-top: 0;
    color: #333;
  }

  /* Category Container */
  .category-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 20px;
  }

  /* Category Card Styling */
  .category-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    width: 80%;
    max-width: 800px;
    padding: 15px 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .category-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .category-details h2 {
    font-size: 18px;
    margin: 0;
    color: #333;
  }

  .category-details p {
    font-size: 14px;
    margin: 5px 0 0;
    color: #666;
  }

  .update {
    background-color: #0f56d0;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
  }

  .update:hover {
    background-color: #0942a4;
  }

  .delete {
    background-color: #e94629;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 14px;
  }

  .delete:hover {
    background-color: #e13011;
  }

  .categoryId {
    color: green;
  }
</style>
</html>
