<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      min-height: 100vh;
    }

     /* Top Navigation Bar */
     .navbar {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .navbar a {
      color: white;
      text-decoration: none;
      margin: 0 10px;
      font-size: 16px;
      padding: 8px 12px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .navbar a:hover {
      background-color: #0056b3;
    }

    .navbar .logout-link {
      background-color: #e74c3c;
    }

    .navbar .logout-link:hover {
      background-color: #c0392b;
    }

    /* Main Content */
    .main-content {
      padding: 20px;
    }

    /* Page Title */
    .main-content h1 {
      text-align: center;
      margin-top: 0;
      color: #333;
    }

    /* User List Table */
    table {
      width: 80%;
      max-width: 800px;
      border-collapse: collapse;
      margin: 40px auto 0;
    }

    th,
    td {
      padding: 15px;
      text-align: left;
      border: 1px solid #ddd;
    }

    th {
      background-color: #020202;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    /* Responsive Design */
    @media (max-width: 600px) {
      .navbar {
        flex-direction: column;
      }

      table {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <!-- Top Navigation Bar -->
  <div class="navbar">
    <div>
      <a href="/admin/create/product">Create Product</a>
      <a href="/admin/product/list">Product List</a>
      <a href="/admin/create/category">Create Category</a>
      <a href="/admin/category/list">Category List</a>
      <a href="/admin/create/subcategory">Create Subcategory</a>
      <a href="/admin/subcategory/list">Subcategory List</a>
      <a href="/admin/user/list">User List</a>
      <a href="/admin/orders/list">Orders List</a>
    </div>
    <a href="/admin/logout" class="logout-link">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <h1>User List</h1>
    <table border="1">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Email</th>
          <th>Age</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length > 0) { %>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.firstname %></td>
              <td><%= user.email %></td>
              <td><%= user.age %></td>
              <td>
                <% if (user.isBlocked) { %>
                  <form action="/admin/user/unblock/<%= user._id %>" method="POST">
                    <button type="submit">Unblock</button>
                  </form>
                <% } else { %>
                  <form action="/admin/user/block/<%= user._id %>" method="POST">
                    <button type="submit">Block</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No users found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
