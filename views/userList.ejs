<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar Styling */
    .sidebar {
      background-color: #007bff;
      color: white;
      width: 20%;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .sidebar h1 {
      font-size: 24px;
      margin-bottom: 20px;
      text-align: left;
    }

    .sidebar a {
      text-decoration: none;
      color: white;
      font-size: 18px;
      margin: 10px 0;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .sidebar a:hover {
      background-color: #0056b3;
    }

    .logout-link {
      margin-top: auto;
      background-color: #e74c3c;
      color: white;
      padding: 10px 15px;
      border-radius: 5px;
      text-align: center;
    }

    .logout-link:hover {
      background-color: #c0392b;
    }

    /* Main Content */
    .main-content {
      flex-grow: 1;
      padding: 20px;
    }

    /* Page Title */
    .main-content h1 {
      text-align: center;
      margin-top: 0;
      color: #333;
    }

    /* User List Container */
    .user-list-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    /* User List Table */
    table {
      width: 100%;
      height: fit-content;
      max-width: 800px;
      border-collapse: collapse;
      margin-top: 20px;
      margin-left: 200px;
    }

    th,
    td {
      padding: 15px;
      text-align: left;
      border: 1px solid #ddd;
    }

    th {
      background-color: #020202;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    /* Responsive Design */
    @media (max-width: 600px) {
      .sidebar {
        width: 100%;
        padding: 10px;
      }

      table {
        width: 200px;
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/admin/dashboard">
      <h1>Admin Dashboard</h1>
    </a>
    <a href="/admin/create/product">Create Product</a>
    <a href="/admin/product/list">Product List</a>
    <a href="/admin/create/category">Create Category</a>
    <a href="/admin/category/list">Category List</a>
    <a href="/admin/create/subcategory">create subcategory</a>
    <a href="/admin/subcategory/list">Subcategory List</a>
    <a href="/admin/user/list">User list</a>
    <a href="/admin/orders/list">Orders List</a>
    <a href="/admin/logout" class="logout-link">Logout</a>
    
  </div>
  <div class="table1">
    <table border="1">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>    </th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length> 0) { %>
          <% users.forEach(user=> { %>
            <tr>
              <td>
                <%= user.firstname %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.age %>
              </td>
              <td>
                <% if (user.isBlocked) { %>
                  <form action="/admin/user/unblock/<%= user._id %>" method="POST">
                    <button class="block-unblock" type="submit">Unblock</button>
                  </form>
                <% } else { %>
                  <form action="/admin/user/block/<%= user._id %>" method="POST">
                    <button class="block-unblock" type="submit">Block</button>
                  </form>
                <% } %>
              </td>
            </tr>
            <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3">No users found.</td>
                </tr>
                <% } %>
      </tbody>
    </table>
  </div>


</body>


</html>